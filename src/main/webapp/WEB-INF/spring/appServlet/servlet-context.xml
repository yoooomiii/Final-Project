			<interceptors>
			<interceptor>
				<mapping path="/admin**"></mapping> <!-- admin으로 시작하는 요청을 가로챈다. -->
				<beans:ref bean="adminTnterceptor"></beans:ref>
			</interceptor>
		</interceptors>
		
			<interceptors>
			<interceptor>
				<mapping path="/myPage"></mapping>
				<mapping path="/"></mapping>  <!-- mypage 요청을 가로챈다. -->
				<beans:ref bean="userTnterceptor"></beans:ref>
				
			</interceptor>
		</interceptors>
		

	<beans:bean class="java.lang.String" id="uploadPath">
		<beans:constructor-arg value="/foodimg"></beans:constructor-arg>
	</beans:bean>
	
	<beans:bean class="java.lang.String" id="uploadPaths">
   		 <beans:constructor-arg value="/reviewimg"></beans:constructor-arg>
	</beans:bean> 
	

	<!-- <context:component-scan base-package="www.egg" /> -->



	<context:component-scan
		base-package="www.egg.hom" />
	<context:component-scan
		base-package="www.egg.dao" />
	<context:component-scan
		base-package="www.egg.service" />
	<context:component-scan
		base-package="www.egg.util" />
		
</beans:beans>